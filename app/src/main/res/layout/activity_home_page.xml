<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/accentLight">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="125dp"
        android:layout_height="126dp"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:src="@drawable/logo3" />

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:paddingBottom="16dp"
        android:text="Welcome to TODO!"
        android:textColor="@color/primaryDark123"
        android:textSize="37sp"
        android:textStyle="bold" />

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/primaryColor11"
        android:layout_marginBottom="16dp" />

    <!-- Beautiful Upcoming Tasks Section -->
    <TextView
        android:id="@+id/upcoming_tasks_bar"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Upcoming Tasks"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:background="@color/primaryColor34" /> <!-- Add background color here -->

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="@color/primaryDark123" />

    <!-- Stylish Buttons -->
    <Button
        android:id="@+id/view_tasks_button"
        android:layout_width="240dp"
        android:padding="12dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/yellowAccent"

        android:text="View Tasks"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/add_task_button"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_width="240dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/yellowAccent"
        android:padding="12dp"
        android:text="Add Task"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/timer_button"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/yellowAccent"
        android:text="StopWatch"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:padding="12dp" />

    <Button
        android:id="@+id/reminder_button"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/yellowAccent"
        android:text="Reminder"
        android:textSize="20sp" />

</LinearLayout>
